@model MakaleApp.Data.Entity.Yorum

@{
    ViewData["Title"] = "Yorum Güncelle";
}

<h2>Yorum Güncelle</h2>

<h4>Yorum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="YorumUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="YorumId" />
            <div class="form-group">
                <label asp-for="YorumIcerik" class="control-label"></label>
                <input asp-for="YorumIcerik" class="form-control" />
                <span asp-validation-for="YorumIcerik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
